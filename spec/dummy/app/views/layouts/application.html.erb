<!DOCTYPE html>
<html>
  <head>
    <title>Dummy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body class="<%= current_user ? 'cpy-signed-in' : 'cpy-signed-out' %>">
		<%- flash.keys.each do |k| %>
		  <div class="cpy-error"> <%= flash[k] %> </div>
		<% end %>

    <%= yield %>
  </body>
</html>
